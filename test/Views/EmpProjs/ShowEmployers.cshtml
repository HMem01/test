@model IList<EmpProj>

@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/_ViewImports.cshtml";
    var Model = (IList<EmpProj>)ViewBag.EmpList;
}

<h1>Index</h1>


<form asp-action="Add">
    <p>
        <input id="Button1" type="submit" value="Add" />
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
            <tr>
                <td>
                        <input asp-for="@Model[i].ProjectID" value="@ViewBag.ProjectID" />
                        <select asp-for="@Model[i].EmployeeID" asp-items="@new SelectList(ViewBag.Employers)" />
                </td>
            </tr>
    }
            
        </tbody>
    </table>
</form>
<div>
    <a asp-controller="Projects" asp-action="Index">Back to List</a>
</div>
<div class="form-group">
    <input type="submit" value="Save" class="btn btn-primary" />
</div>
