@model test.Models.EmpProj

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/_ViewImports.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>EmpProj</h4>
    <hr />
    <dl class="row">
        <!-- Отображение информации о проекте -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.Id)
        </dd>

        <!-- Отображение информации о сотруднике -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Id)
        </dd>
    </dl>

    <!-- Форма подтверждения удаления связи -->
    <form asp-action="Delete">
        <!-- Скрытые поля для передачи идентификаторов проекта и сотрудника -->
        <input type="hidden" asp-for="ProjectID" />
        <input type="hidden" asp-for="EmployeeID" />

        <!-- Кнопка для отправки формы и удаления связи -->
        <input type="submit" value="Delete" class="btn btn-danger" /> |

        <!-- Ссылка для возврата к списку связей сотрудников и проектов -->
        <a asp-action="Index">Back to List</a>
    </form>
</div>
