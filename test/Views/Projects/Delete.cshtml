<!-- Указание модели для представления -->
@model test.Models.Project

<!-- Установка заголовка страницы -->
@{
    ViewData["Title"] = "Delete";
}

<!-- Заголовок страницы -->
<h1>Delete</h1>

<!-- Подтверждение удаления -->
<h3>Are you sure you want to delete this?</h3>

<!-- Отображение данных о проекте -->
<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">

        <!-- Отображение названия проекта -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <!-- Отображение описания проекта -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <!-- Отображение даты начала проекта -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <!-- Отображение даты завершения проекта -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>

        <!-- Отображение приоритета проекта -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Priority)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Priority)
        </dd>
    </dl>

    <!-- Форма для подтверждения удаления проекта -->
    <form asp-action="Delete">
        <!-- Скрытое поле для передачи идентификатора проекта -->
        <input type="hidden" asp-for="Id" />

        <!-- Кнопка для удаления проекта -->
        <input type="submit" value="Delete" class="btn btn-danger" /> |

        <!-- Ссылка для возврата к списку проектов -->
        <a asp-action="Index">Back to List</a>
    </form>
</div>
