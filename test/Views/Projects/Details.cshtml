<!-- Указание модели для представления -->
@model test.Models.Project

<!-- Установка заголовка страницы -->
@{
    ViewData["Title"] = "Details";
}

<!-- Заголовок страницы -->
<h1>Details</h1>

<!-- Отображение данных о проекте -->
<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">

        <!-- Отображение названия проекта -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <!-- Отображение описания проекта -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <!-- Отображение даты начала проекта -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <!-- Отображение даты завершения проекта -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>

        <!-- Отображение приоритета проекта -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Priority)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Priority)
        </dd>

        <!-- Отображение заказчика -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>

        <!-- Отображение исполнителя -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Perfomer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Perfomer.Name)
        </dd>

        <!-- Отображение руководителя проекта -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manager)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manager.Name)
        </dd>
    </dl>
</div>

<!-- Ссылки для редактирования и возврата к списку проектов -->
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
